<UserControl x:Class="FlatRedBall.Glue.GlueView.GlueViewToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlatRedBall.Glue.GlueView"
             mc:Ignorable="d" 
             d:DesignHeight="2" d:DesignWidth="300">
    <Grid>
        <CheckBox x:Name="CheckBox" 
                  VerticalAlignment="Center" VerticalContentAlignment="Center" 
                  Checked="HandleCheckboxChecked"
                  Unchecked="HandleCheckboxUnchecked">Show Preview</CheckBox>
    </Grid>
</UserControl>
